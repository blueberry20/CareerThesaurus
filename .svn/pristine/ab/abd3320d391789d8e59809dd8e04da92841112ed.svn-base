                ViewBag.Date = post.Date.ToString("MMMMMMMMM dd, yyyy");
                string text = post.Article1 + post.Article2 + post.Article3 + post.Article4;
                ViewBag.Article = text.Replace("\n", "").Replace("\r", "");
                return View();
            }
            return View();
        }
