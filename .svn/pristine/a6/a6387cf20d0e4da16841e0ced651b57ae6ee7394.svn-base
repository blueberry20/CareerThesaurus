        <div class="ratingTable">
            @{
                List<ImportantThings> importantThings = ViewBag.importantThings;
                string user = ViewBag.Email;
                string school = ViewBag.School;
                for (var i = 0; i < importantThings.Count; i++)
                {
                    string like = "";
                    //string dislike = "";
                    string value = "";
                    if (user != "" && user != null)
