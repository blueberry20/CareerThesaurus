#newsletterPage {
    background-color: #BECACD;
    padding-bottom:0px;
}

#newsletterPage .container {
    background-color:#fff;
    min-height:800px;    
    padding:30px 30px 200px;
}


#newsletterPage h2 {
    text-align:center;
    margin: 10px 0 30px;
    font-size:30px;
}

input[type="text"] {
    -webkit-appearance: none !important;
    padding: 10px;
    height: 50px !important;
}

select {
    padding: 10px;
    height: 50px !important;
}



div.form-group.row {
    margin-bottom: 40px;
}


form {
    width: 80%;
    margin: 0 auto;
    margin-top: 25px;
    padding:20px;
    opacity:0;
}

#joinNewsletterBtn {
    margin:0 auto;
    font-weight: 600;
    font-size: 15px;
    border:none;
    background-color: rgba(23, 184, 214, 1);
    color:#fff;
    width: 150px;
    height: 60px;
    text-transform: uppercase;
    border:none;
    font-weight:600;
}

#joinNewsletterBtn:hover {
    background-color: #129DB7;
}

#newsletterForm {
    background-color: rgb(143, 214, 228);
    margin-top:50px;
}

#newsletterForm label {
    text-align:right;
    font-family:'open sans';
    font-size:20px;
}

#optionalForm {
    /*border: 1px solid rgb(143,214,228);*/
}

#optionalForm .form-control {
    background-color: #D9F6F9;
    font-size:18px;
}



.form-group label {
    font-weight: 400;
    font-size: 32px;
    line-height: 50px;
    text-align:left;
    font-family:'open sans condensed';

}

.radio input[type="radio"] {
    margin:20px;
}


@media only screen and (max-width:992px) {
    #newsletterPage .container {
        width:100%;
    }

    form {
        width: 90%;
    }

}

@media only screen and (max-width:768px) {
    #newsletterPage .container {
        padding:30px 30px 50px;
    }

    form {
        width: 100%;
    }

    #newsletterForm {
        margin-top: 0;
    }

    #newsletterPage h2 {
        font-size:26px;
    }

    div.form-group.row {
        margin-bottom: 20px;
    }

    form {
        margin-top:30px;
    }


}


@media only screen and (max-width:650px) {
    #newsletterPage .container {
        padding:0 0 50px;
    }

    form {
        padding:7px;
        margin-top:10px;
    }

    #newsletterPage h2 {
        font-size:22px;
        margin:10px 15px 15px;
    }

    #newsletterForm label {
        text-align: right;
        font-family: 'open sans';
        font-size: 18px;
        line-height: 36px;
    }

    .form-group label {
        font-size: 24px;
    }

    #joinNewsletterBtn {
        width:100px;
        height:50px;
    }

}