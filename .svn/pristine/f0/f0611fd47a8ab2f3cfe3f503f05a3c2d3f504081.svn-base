  #traits {position: absolute; width: 100%;}
  
  #traits .first {opacity: 0;} 
  #traits .second {opacity: 0;} 
</style>

<script>

    var headlines = [

        { op1: 0, op2: 1, s1: 10, s2: 160, intime: 0, displaytime: 3000, outtime: 1000, trailtime: 0, text: 'Take a FREE Career Assessment Test.' },
        { op1: 0, op2: 1, s1: 10, s2: 160, intime: 0, displaytime: 3000, outtime: 1000, trailtime: 0, text: 'Discover Careers that Fit Your Personality Naturally.' },

        { op1: 0, op2: 1, s1: 10, s2: 160, intime: 0, displaytime: 3000, outtime: 1000, trailtime: 0, text: 'Find a Perfect Job and make it a Career!' },
        { op1: 0, op2: 1, s1: 10, s2: 160, intime: 0, displaytime: 3000, outtime: 1000, trailtime: 0, text: 'Get matched with Schools to get the training you need.' },

        { op1: 0, op2: 1, s1: 10, s2: 160, intime: 0, displaytime: 3000, outtime: 1000, trailtime: 0, text: 'Don\'t just fall into a job, get a Career!' },

        { op1: 0, op2: 1, s1: 10, s2: 160, intime: 0, displaytime: 3000, outtime: 1000, trailtime: 0, text: 'SkillCow.com is FREE to use.' },
        { op1: 0, op2: 1, s1: 10, s2: 160, intime: 0, displaytime: 5000, outtime: 1000, trailtime: 0, text: 'Visit us online at www.SkillCow.com today!' },

        { op1: 0, op2: 1, s1: 10, s2: 160, intime: 0, displaytime: 4000, outtime: 1000, trailtime: 0, text: 'We\'re hiring!  Send your resume to info@skillcow.com' }

        
    ];

        $(document).ready(function () {

            //position traits
            for (var row = 0; row < 9; row++) {
                $('.row' + row + 'first').css('top', 250 + 70 * row);
                $('.row' + row + 'second').css('top', 250 + 70 * row);
            }
            //animatecareercanterbanner(0);
            //animatecareersbanner(0);

            var row = Math.floor(Math.random() * 9);
            animatetraits(row);

            animateshot(0);
            runheadlines(0);
        });

    function run(index) {
        var hl = headlines[index];
        $('#caption').css('opacity', hl.op1);
        $('#caption').css('font-size', hl.s1 + 'px');
        $('#container').css('margin-top', (-hl.s1) + 'px');

        $('#caption').html(hl.text);
        $('#caption').animate({ 'opacity': hl.op2, 'font-size': hl.s2 + 'px', 'height': hl.s2 + 'px' }, hl.intime);
        $('#container').animate({ 'margin-top': (-hl.s2 * 1.3) + 'px' }, hl.intime);

        //Wait for intime
        setTimeout(function () {
            //Wait for displaytime
            setTimeout(function () {
                $('#caption').animate({ 'opacity': 0 }, hl.outtime);
                //Wait for outtime
                setTimeout(function () {
                    setTimeout(function () {
                        if (index < headlines.length - 1) {
                            run(index + 1);
                        }
                        else {
                            run(0);
                        }
                    }, hl.trailtime);
                }, hl.outtime);
            }, hl.displaytime);
        }, hl.intime);
    }

    function runheadlines(index) {
        var hl = headlines[index];
        $('#footer').css('opacity', hl.op1);

        $('#footer').html(hl.text);
        $('#footer').animate({ 'opacity': hl.op2 }, hl.intime);
        
        //Wait for intime
        setTimeout(function () {
            //Wait for displaytime
            setTimeout(function () {
                $('#footer').animate({ 'opacity': 0 }, hl.outtime);
                //Wait for outtime
                setTimeout(function () {
                    setTimeout(function () {
                        if (index < headlines.length - 1) {
                            runheadlines(index + 1);
                        }
                        else {
                            runheadlines(0);
                        }
                    }, hl.trailtime);
                }, hl.outtime);
            }, hl.displaytime);
        }, hl.intime);
    }

    var prevshot = -1;
    function animateshot(shotnumber) {

        //$('#header').html('animateshot(' + shotnumber + '); prevshot=' + prevshot);

        var duration = 400;
        var durationbeforeshowingnext = 0;

        if (prevshot >= 0) {

            //$('#caption').html('Hiding #shot' + prevshot);
            $('#shot' + prevshot).animate({ "opacity": 0 }, duration);

            durationbeforeshowingnext = duration;
        }

        //Show next slide
        setTimeout(function () {

            //$('#caption').html('Showing #shot' + shotnumber);
            $('#shot' + shotnumber).animate({ "opacity": 1 }, duration);
            prevshot = shotnumber;

            if (shotnumber > 7) {
                shotnumber = 0;
            }
            else {
                shotnumber++;
            }

            setTimeout(function (nextshot) {
                animateshot(nextshot);
            }, duration, shotnumber);

        }, durationbeforeshowingnext);


    }

    function animatecareercanterbanner(direction) {

        var duration = 2000;
        var offset1 = 40;
        var offset2 = 200;

        $('#careercanterbanner').stop();

        if (direction == 0) {
            $('#careercanterbanner').animate({ "left": offset2 }, duration)
            setTimeout(function () {
                animatecareercanterbanner(1);
            }, duration);
        }
        else {
            $('#careercanterbanner').animate({ "left": offset1 }, duration)
            setTimeout(function () {
                animatecareercanterbanner(0);
            }, duration);
        }
    }
    function animatecareersbanner(direction) {

        var duration = 47000;
        var offset1 = 40;
        var offset2 = 810;

        $('#careersbanner').stop();

        if (direction == 0) {
            $('#careersbanner').animate({ "left": offset2 }, duration)
            setTimeout(function () {
                animatecareersbanner(1);
            }, duration);
        }
        else {
            $('#careersbanner').animate({ "left": offset1 }, duration)
            setTimeout(function () {
                animatecareersbanner(0);
            }, duration);
        }
    }

    function animatetraits(row) {

        var duration = 100;

        //left or right?
        if (Math.random() < 0.5) {
            $('.row' + row + 'first').animate({ 'opacity': 1 }, duration);
            $('.row' + row + 'second').animate({ 'opacity': 0 }, duration);
        }
        else {
            $('.row' + row + 'first').animate({ 'opacity': 0 }, duration);
            $('.row' + row + 'second').animate({ 'opacity': 1 }, duration);
        }

        setTimeout(function () {
            animatetraits(Math.floor(Math.random() * 9));
        }, duration);
    }
</script>
