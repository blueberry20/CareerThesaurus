<style>
.attribute_description {margin-left: 125px; font-size: @(ViewBag.IsMobileDevice?"12pt":"18pt"); width: @(ViewBag.IsMobileDevice?"600px":"900px");}
</style>

<script>
    
    var _attribute_description_loaded = false;

    function showAttributeDescription(e) {
        
        showOverlay('_attribute_description');

        $('.attribute_description').hide();

        $('#attributename').html($(e).attr('attributecaption'));
        $('#_' + $(e).attr('dimension').toLowerCase() + '_' + $(e).attr('value').toLowerCase() + '_description').show();

        if (!_attribute_description_loaded) {
            $('#_attribute_description_backbutton').press(function () {
                $('.result_attribute').removeClass('result_attribute_active');
                hideOverlay('_attribute_description');
            });

            $(document).keydown(function (e) {
                if (e.keyCode == 27) {
                    $('.result_attribute').removeClass('result_attribute_active');
                    hideOverlay('_attribute_description');
                }   
            });

            _attribute_description_loaded = true;
        }
    }

</script>