	
/* BLOG PAGE
-------------------------------------------------- */
.blogPage {
    padding:50px 0 0;
}

.blogPage .container {
    background-color: #fff;
    padding:15px 15px 30px;
}

.blogPage h1 {
    text-align: center;
    margin: 10px 0 30px;
}

select.form-control {
    height:50px;
    line-height:50px;
    margin-bottom:15px;
}

.form-group label {
    font-size: 20px;
    font-family: 'open sans condensed';
}

.form-group p {
    margin:10px 0 5px;
    color: #999;
    text-transform: uppercase;
    font-size: 12px;
}

/*all posts. main section*/
.blogPostsWrapper {
   background-color: #fff;
}

/*one blog post preview*/
.blogPostShort { 
     padding:20px;
     border-bottom: 1px solid rgb(200,200,200);
}

.blogPostShort:last-child {
    border-bottom:none;   
}

.blogImageHolder {
     height:350px;
     overflow:hidden;   
}

.blogParagraph {
 font-family: 'Open Sans', Sans-Serif;
 font-size:16px;   
}


.blogDate, .blogCategory, .blogComments {
    display:inline-block;
    font-family:'Open Sans Condensed', Sans-Serif;
    font-size:20px;
}

.blogCategory {
    color: rgb(2, 124, 178);
}

.blogCategory:hover {
    
}

.sidebarWidget .blogDate, .sidebarWidget .blogComments {
    font-size:16px;
    display:block;
}

.shareRowText span {
    height:20px;
    padding: 0 3px;
}

.pager li>a, .pager li>span {
    border-radius: 0;
    height: 50px;
    line-height: 50px;
    padding: 0 10px;
    border:1px solid rgb(23, 184, 214);
    color:#000;
}

.pager li>a:hover, .pager li>span:hover, .pager li>a:focus, .pager li>span:focus, .pager li>a:active, .pager li>span:active {
    background-color: rgb(23,184,214);
}

/*.blogDate:after, .blogCategory:after {
 content: " |";   
}*/
    
.socialIconsHolder p {
    font-family: 'Open Sans Condensed', Sans-Serif;
    font-size: 18px;
    display: inline-block;
    text-transform: uppercase;
    color: #000;
    font-weight: 300;
    margin:0;
}	


/*************************Sidebar widgets*************************/
.blogSidebar {
    padding:0;
}

.blogSidebar h3 {
    padding: 0 0 5px;  
    font-size:19px;
}

.sidebarWidget {
    padding: 0 10px 10px 10px;    
    font-size:16px;
}  

.sidebarWidget .row {
    margin:5px 0;   
}
    
.sidebarWidget ul {
    list-style:none;
    padding-left:0;
    width:100%;
}   

.sidebarWidget a {
    color: #000;   
}

.dropdown-menu > li > a {
    text-align:center;
}

.no-touch .sidebarWidget a:hover {
 text-decoration:none;
}

#archive {
    width:100%;
}

/****tags widget****/
#tagsWidget a, .blogTag {
    color:#000;
    border:1px solid rgb(23, 184, 214);
    border-radius: 4px;
    padding:5px;
    margin:5px;
    display:inline-block;
}

#tagsWidget a:hover, #tagsWidget a:focus, #tagsWidget a:active, .blogTag:hover, .blogTag:focus, .blogTag:active {
    cursor:pointer;
    text-decoration:none;  
    background-color: rgb(23, 184, 214);
}

.blogTag {
    margin: 5px 5px 5px 0;
}

/****Recent Posts widget****/
.articleEntry {
    padding:15px 0;   
    display:block;
    margin:0;
    border-bottom:1px solid rgb(23, 184, 214);
}

.no-touch .articleEntry:hover {
   
}

.articleInfo {
    padding-right:0; 
    padding-top:5px;  
}
     
.articleInfo h4 {
    margin:0;
    font-size:14px;
}

.articleImageHolder {
 overflow:hidden;
 padding:0;
}



/****Recent Tweets widget****/
#recentTweets .row {
  background-color:#f0f0f0;   
  padding:5px;
}

.no-touch #recentTweets .row:hover {
 background-color: #e0e0e0;
}
 
 #recentTweets a {
  color: #39b3d7;
 }
 
 .no-touch #recentTweets a:hover {
  color: #46b8da;  
 }

 #signupWidget .greenBorderBtn {
     width:100%;
     background-color:rgb(23, 184, 214);
 }

 #signupWidget .greenBorderBtn:hover, #signupWidget .greenBorderBtn:focus, #signupWidget .greenBorderBtn:active {
     background-color: #fff;
 }

 #signupWidget .form-group {
     margin-bottom:10px;
 }

 .advertisementWidget {
     margin-top:20px;
 }

 .readButtonWrapper {
    text-align: right;
}
 
 /*****************Responsive*******************/

@media only screen and (max-width:1200px) {

    .blogImageHolder {
        height: 300px;
    }

    .blogPage .container {
        width:100%;
    }
}


@media only screen and (max-width:992px)  {

     .blogSidebar {
         padding:0 0 10px;
     }
     
     .sidebarWidget {
        padding:0;   
     }

     .blogSidebar h3 {
        margin-bottom: 5px;
        font-size:18px;
     }
 
     .articleImageHolder 
     {
      height:100px;   
     }   
 
     .categoriesWidget ul li, #recentTweets .row {
        height:50px;     
     }
}


@media only screen and (max-width: 768px) {
    
     .blogImageHolder {
        height:250px;
      }
    
      .sidebarWidget {
            padding:0 0 15px;   
     }   

      .blogPostShort {
            margin: 0 0 15px;
            padding: 0 0 15px;
      }

      .blogPostsWrapper {
          padding:0;
      }

      .blogSidebar h3 {
          text-align:center;
      }

      .articleEntry {
          padding: 10px 0;
      }

      .blogPostShort .coloredSocialIcons {
          text-align:left;
      }
}

@media only screen and (max-width:500px) {
    h2 {
        font-size:18px;
    }

    .shareRowText {
        text-align:left;
    }

    .blogDate, .blogCategory, .blogComments {
        font-size:16px;
    }

    .blogParagraph {
        font-size: 14px;
    }

    h3 {
        font-size: 15px;
        margin: 10px 0 5px;
    }

    .btn-info {
        font-size:14px;
    }
}






