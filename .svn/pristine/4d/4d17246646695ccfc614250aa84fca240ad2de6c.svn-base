
/* CAREERS INDEX PAGE
-------------------------------------------------- */


#careerPageIcons {
padding-bottom:0;
}

#careerPageIcons img {
height:100px;   
}

#careerPageIcons h1{
padding-bottom: 0;
}

#careerPageIcons p {
text-align:left;
font-size: 20px;   
padding: 10px;
}

#careerPageIcons .row div {
text-align: center;   
}


#careersPageSection h3 {
text-transform: uppercase;  
padding-top:5%; 
font-size: 26px;
}


#careerCategoriesPictures .col-lg-2, .col-md-3, .col-sm-4, .col-xs-6 {
padding: 5px;  
}


#careerCategoriesPictures {
margin: 0 auto;
}


#careerCategoriesPictures img {
    width:100%;
}

@media only screen and (max-width: 1500px) {
    #careerCategoriesPictures .col-lg-2 {
        width:25%;
    }
}

@media only screen and (max-width: 1100px) {
    #careerCategoriesPictures .col-lg-2 {
        width:33.33%;
    }
}

@media only screen and (max-width: 768px) {
    #careerCategoriesPictures .col-lg-2 {
        width:50%;
    }
}

@media only screen and (max-width: 550px) {
    #careerCategoriesPictures .col-lg-2 {
        width:100%;
    }
}

.imageCell {
    float:left;
    overflow: hidden;
    position: relative;
    width:100%;
}



.cover {
    float: left;
    position: absolute;
    top:0;
    left:0;
    background-color:rgba(240, 235, 177, 0.86);
    width: 100%;
    height:100%;
  /*  opacity: .6;*/
    /* For IE 5-7 
    filter: progid:DXImageTransform.Microsoft.Alpha(Opacity=60);*/
    /* For IE 8 
    -MS-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=60)";*/
  }

.overlayDescription {
    color:#fff;
    position:absolute;
    top:100px;
    padding: 20px;
    text-align: center;
    font-size: 16px;
    color: #000;
    font-weight:600;
}

