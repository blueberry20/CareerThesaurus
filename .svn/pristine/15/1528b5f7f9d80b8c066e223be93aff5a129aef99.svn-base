
/*============CLASSIFICATION PAGE========*/


.mainDiv {
    background-color: #fff;
    padding-top:20px;
}


.currentClassHeader, .subClass {
    font-size:28px;
    background-color: rgb(222, 242, 247);
    background-color: rgb(143, 214, 228);
    margin: 0;
    padding: 10px;
    border: 1px solid #fff;
    text-transform:uppercase;
    font-family:'open sans condensed';
    font-weight:600;
}

.currentClassName {
    min-height:80px;
    margin:10px 0;
    position:relative;
}

.currentClassName img {
    height:80px;
    float:left;
}

.currentClassName span {
    font-size:24px;
    text-transform:uppercase;
}


.mainDiv ul img {
    height:70px;
    float:left;
}

.mainDiv ul {
    list-style:none;
    padding: 10px 0 0 5px;
}


.mainDiv ul a {
    font-family: 'open sans';
    font-size: 20px;
    margin: 0;
    position: relative;
    display: block;
    vertical-align: middle;
    height: 80px;
    width: 100%;
    border-bottom: 1px solid rgba(23, 184, 214, 1);
    color:#000;
    padding:5px 0;
}

.mainDiv ul a:hover, .mainDiv ul a:focus, .mainDiv ul a:active {
    background-color: rgb(222, 242, 247);
    -webkit-tap-highlight-color: rgb(222, 242, 247);
    text-decoration: none;
}

.classificationList li i {
    position: absolute;
    right: 0;
    top: 50%;
    font-size: 20px;
    margin-top: -14px;
    padding-right:5px;
}

.tableCell {
    display: table-cell;
    vertical-align: middle;
    height: 70px;
    padding-left:25px;
    padding-right:25px;
}

#classificationImg {
    height:300px;
}

.majorClass {
    padding: 0 10px 10px;
    font-size: 20px;
    text-transform:uppercase;
}


.nothingFound {
    padding: 15px;
    overflow: hidden;
    text-align: center;
    font-size: 26px;
    background-color: #DAEFF5;
    font-family: 'open sans condensed';
    text-transform: uppercase;
    margin-bottom: 20px;
}


/*sidebar*/

.sidebar {
    padding-left:5px;
}

.sidebarDiv {
    background-color: #fff;
}

.sidebarDiv h3 {
    margin:0;
}

#sidebarJobHolder {
    padding-top:30px;
}


@media only screen and (max-width:1200px) {
    .currentClassName span {
        font-size:20px;
    }
}

@media only screen and (max-width: 992px) {
    #categorizationPage .container {
        width:100%;
    }

    .currentClassName span {
        font-size:20px;
    }

    .currentClassHeader, .subClass {
        font-size:24px;
    }

    .nothingFound {
        font-size:24px;
    }

    .mainDiv {
        padding:10px 5px;
    }

    #sidebarJobHolder {
        padding: 20px 5px;
    }

}

@media only screen and (max-width:768px) {
    .nothingFound {
        font-size: 20px;
        margin-bottom:10px;
    }

    .currentClassHeader, .subClass {
        font-size: 20px;
    }

    .mainDiv {
        padding:10px;
    }



    .currentClassHeader, .subClass {
        font-size: 20px;
        padding:5px;
    }

    .currentClassName {
        min-height:70px;
        margin:0;
        padding:5px 0;
    }

    .currentClassName .tableCell {
        font-size:16px;
        height:60px;
    }

    .currentClassName img {
        height:60px;
    }

    .majorClass {
        font-size:12px;
        padding:5px;
    }

    .mainDiv ul a {
        font-size:16px;
        height:60px;
        padding-left:5px;
    }

    .mainDiv ul img {
        height:50px;
    }

    .mainDiv ul {
        padding:0;
    }

    .tableCell {
        height:50px;
        padding-left: 10px;
    }
    
    .sidebar {
        padding:15px 5px;
    }

    /*.sidebarDiv h3, .inYourArea {
        text-align: left;
    }*/
}

@media only screen and (max-width:650px) {
    .classificationCrumbs {
        font-size:13px;
    }

}