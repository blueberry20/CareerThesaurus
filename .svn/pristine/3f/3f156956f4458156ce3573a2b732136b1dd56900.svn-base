#emailResultsPage {
    min-height:100%;
}

#emailResultsPage .container {
    background-color:#fff;
    height:100%;
}

h1 {
    font-weight:600;
    text-align:center;
}

form {
    width: 80%;
    margin: 0 auto;
    margin-top: 50px;
    padding:20px;
    opacity:0;    
    background-color: rgb(143, 214, 228);
}

#joinNewsletterBtn, #advertiseBtn {
    margin:0 auto;
    font-size: 15px;
    background-color: rgb(23, 184, 214);
    color:#fff;
    width: 150px;
    height: 60px;
    text-transform: uppercase;
    border:none;
    font-weight:600;
}

.no-touch #joinNewsletterBtn:hover, #joinNewsletterBtn:focus, #joinNewsletterBtn:active, .no-touch #advertiseBtn:hover, #advertiseBtn:focus, #advertiseBtn:active {
    background-color: #129DB7;
}

.form-group {
    padding: 20px;
}

.form-group label {
    font-weight: 400;
    font-size: 32px;
    line-height: 50px;
    text-align:left;
    font-family:'open sans condensed';
}

.errorMsg {
    color: rgb(207, 2, 2);
    font-size: 16px;
    text-align:center;
    margin:0;
    padding:15px 0;
}

p.displayError {
    display: none;
    font-size: 14px;
    color: rgb(207, 2, 2);
    line-height: 30px;
    text-align: left;
}

.hasError {
    border: 1px solid red;
}

.adsenseResponsive {
    width:80%;
    height:200px;
    margin:0 auto;
}

.extraMargin {
    margin: 50px 0 50px;
}

.divider {
    width:200px;
    margin: 0  auto;
    background-color:rgb(23, 184, 214);
    height:1px;
    margin:50px auto;
}

a {
    text-transform: uppercase;
}