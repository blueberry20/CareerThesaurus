#newsletterPage, #newsletterThankyouPage {
    background-color: #BECACD;
    padding-bottom:0px;
}

#newsletterPage .container, #newsletterThankyouPage .container {
    background-color:#fff;
    min-height:800px;    
    padding:30px 30px 200px;
}


#newsletterPage h2, #newsletterThankyouPage h2 {
    text-align:center;
    margin: 10px 0 30px;
    font-size:30px;
}

 #newsletterThankyouPage h2 {
     font-size:42px;
 }

input[type="text"] {
    -webkit-appearance: none !important;
    padding: 10px;
    height: 50px !important;
}

select {
    padding: 10px;
    height: 50px !important;
}


div.form-group.row {
    margin-bottom: 40px;
}


form {
    width: 80%;
    margin: 0 auto;
    margin-top: 25px;
    padding:20px;
    opacity:0;
}

#joinNewsletterBtn {
    margin:0 auto;
    font-weight: 600;
    font-size: 15px;
    border:none;
    background-color: rgba(23, 184, 214, 1);
    color:#fff;
    width: 150px;
    height: 60px;
    text-transform: uppercase;
    border:none;
    font-weight:600;
}

#joinNewsletterBtn:hover {
    background-color: #129DB7;
}

#newsletterForm {
    background-color: rgb(143, 214, 228);
    margin-top:50px;
}

#newsletterForm label {
    text-align:right;
    font-family:'open sans';
    font-size:20px;
}

#optionalForm {
    /*border: 1px solid rgb(143,214,228);*/
}

#optionalForm .form-control {
    background-color: #D9F6F9;
    font-size:18px;
}

.form-group label {
    font-weight: 400;
    font-size: 32px;
    line-height: 50px;
    text-align:left;
    font-family:'open sans condensed';

}

.radio input[type="radio"] {
    margin:20px;
}

/*============Thank you Page===============*/
.messageContainer {
    min-height: 250px;
    padding: 30px;
    margin: 0 auto;
    margin-top: 10%;
    width: 80%;
    text-align: center;
    opacity:0;
}

.messageContainer p {
    font-size: 34px;
    text-transform: none;
    margin-top: 70px;
    font-family: 'open sans condensed';
    text-align: center;
}

.directions {
    width: 80%;
    margin: 0 auto;
    font-size: 20px;
    text-align: center;
    margin-top: 40px;
    font-weight: 300;
}


@media only screen and (max-width:992px) {
    /*#newsletterPage .container {
        width:100%;
    }*/

    form, .messageContainer {
        width: 90%;
    }

    #newsletterThankyouPage h2 {
        font-size: 36px;
    }

}

@media only screen and (max-width:768px) {
    #newsletterPage .container, #newsletterThankyouPage .container {
        padding:30px 30px 50px;
    }

    form, .messageContainer {
        width: 100%;
    }

    #newsletterForm {
        margin-top: 0;
    }

    #newsletterPage h2 {
        font-size:26px;
    }

    div.form-group.row {
        margin-bottom: 20px;
    }

    form {
        margin-top:30px;
    }

    #newsletterThankyouPage h2, .messageContainer p {
        font-size:30px;
    }

}


@media only screen and (max-width:500px) {
    #newsletterPage .container, #newsletterThankyouPage .container {
        padding:0 0 50px;
    }

    form {
        padding:7px;
        margin-top:10px;
    }

    #newsletterPage h2 {
        font-size:22px;
        margin:10px 15px 15px;
    }

    #newsletterForm label {
        text-align: right;
        font-family: 'open sans';
        font-size: 18px;
        line-height: 36px;
    }

    .form-group label {
        font-size: 24px;
    }

    #joinNewsletterBtn {
        width:100px;
        height:50px;
    }

}