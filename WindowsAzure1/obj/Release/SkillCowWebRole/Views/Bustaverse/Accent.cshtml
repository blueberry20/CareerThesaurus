</style>

<script>
    $(document).ready(function () {
    
        var i = 0;
        var results = new Array();

        for (var i = 0; i < words.length; i++) {
            results.push(findAccentedSyllable(words[i]));
        }

        //results.sort(sortbycount);

        for (var i = 0; i < results.length; i++) {
            //if (endsWith(results[i].word, 'ed')) {
            $('#main').append('<div><div class="cell">' + results[i].word + '</div><div class="cell">' + results[i].mask + '</div><div class="cell">' + results[i].count + ' syllables</div></div>');
            //}
        }
    });
    function sortbycount(a, b) {
        if (a.count > b.count)
            return -1;
        if (a.count < b.count)
            return 1;
        return 0;
    }
</script>
