        }
        //$('.detailsBtn').click(function () {
        //    $('.optionDescription').css({ 'visibility': 'hidden', 'opacity': '0' });
        //    $(this).closest('.option').find('.optionDescription').css({ 'visibility': 'visible', 'opacity': '1' });
