@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Cat d'Azur</title>
    <style>
        html,body
        {
            padding:0; font-family: Arial; color: #333; font-size: 10pt; 
            background-image: url("/content/catdazur/bg50_light.png");            
            background-attachment: fixed;
            background-repeat: repeat;
        }
        html, body {
            height: 100%;
            width: 100%;
            margin: 0;
        }
        body, body > img 
        {
            margin: 0 auto;
            display: -webkit-box; display: -moz-box; display: box;
            -webkit-box-orient: vertical;-moz-box-orient: vertical;box-orient: vertical;
            -webkit-box-align: center;-moz-box-align: center;flex-align: center;
            -webkit-box-pack: center;-moz-box-pack: center;flex-pack: center;
        }
        
        
    </style>
    <script src="@Url.Content("~/Scripts/jQuery/jquery.tools.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jQuery/jquery-ui.min.js")" type="text/javascript"></script>
</head>
<body>
    
    <img id="logo" src="/content/catdazur/full_face_transparent_imageonly_black.png" style="max-width: 90%; max-height: 90%; opacity: 0;" />    

    <div id="infoholder">
        <div id="info" style="position: absolute; top: 50%; left: 50%; width: 50%; text-align: left; opacity: 0;">
            <table id="infolayout" border=0 style="margin-top: -80px;">
                <tr>
                    <td><div id="companyname" style="font-family: Times New Roman; font-size: 48pt;">Cat d'Azur</div>    </td>
                </tr>
                <tr>
                    <td><div style="font-family: Arial; font-size: 14pt; text-align: center;">New York</div>    </td>
                </tr>
            </table>
        </div>
    </div>
    
</body>
</html>

<script>
    var introcomplete = false;
    $(document).ready(function () {

        $('#companyname').css('font-size', 160 * (document.documentElement.clientWidth / 1920) + 'px');

        $('#logo').animate({ 'opacity': 1 }, 2000);

        setTimeout(function () {
            $('#logo').animate({ 'margin-left': '-' + ($('#logo').width() / 2) + 'px' }, 1000);

            setFontSize();
            $('#info').animate({ 'opacity': 1 }, 3000);

            setTimeout(function () {

                introcomplete = true;
            }, 1000);


        }, 2500);
    });

    $(window).resize(function () {
        if (introcomplete) {
            $('#logo').css('margin-left', '-' + ($('#logo').width() / 2) + 'px');
            setFontSize();
        }
    });

    function setFontSize() {
        $('#companyname').css('font-size', 200 * (document.documentElement.clientWidth / 1920) + 'px');

        $('#infolayout').css('margin-top', (-$('#infolayout').height() / 2) + 'px');
        $('#infolayout').css('margin-left', - ((document.documentElement.clientWidth - $('#logo').width() / 2) / 2 - $('#infolayout').width() / 2 - 20) + 'px');
    }
</script>